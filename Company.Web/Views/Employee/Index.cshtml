@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(d => d.Age)</th>
                <th> @Html.DisplayNameFor(d => d.Name)</th>
                <th> @Html.DisplayNameFor(d => d.Address)</th>
              
                <th> @Html.DisplayNameFor(d => d.Salary)</th>

                <th> @Html.DisplayNameFor(d => d.Email)</th>
                <th> @Html.DisplayNameFor(d => d.PhoneNumber)</th>
                <th> @Html.DisplayNameFor(d => d.HiringDate)</th>
             
                <th>details</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>
                        <img src="@department.Image" height="40" width="40" alt=""/>
                    </td>
                    <td>@department.Age</td>
                    <td>@department.Name</td>
                    <td>@department.Address</td>
                     <td>@department.Salary</td>
                    <td>@department.Email</td>
                    <td>@department.PhoneNumber</td>
                     <td>@department.HiringDate</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.Id">
                            Details

                        </a>
                    </td>

                    <td>
                        <a asp-action="Update" asp-route-id="@department.Id">
                            Update
                        </a>
                    </td>


                    <td>
                        <a asp-action="Delete" asp-route-id="@department.Id ">
                            Delete

                        </a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-danger">There is no employees</h3>
}